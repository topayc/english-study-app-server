<div class='noset'>
  <button class="btn <% if @r == 1 %> btn-success <% end %>" onclick="location.href='/admin/cpd_advertisements'">전체보기</button>&nbsp;&nbsp;
  <button class="btn <% if @r == 2 %> btn-success <% end %>" onclick="location.href='/admin/cpd_advertisements?type=1'">진행중</button>&nbsp;&nbsp;
  <button class="btn <% if @r == 3 %> btn-success <% end %>" onclick="location.href='/admin/cpd_advertisements?type=0'">종료/대기중</button>&nbsp;&nbsp;
</div>



<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Ad_Type</th>
      <th>Contract</th>
      <th>Remain</th>
      <th>Unit Price</th>
      <th>Pay Type</th>
      <th>Date</th>
      <th>Priority</th>
      <th>Cor Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cpd_advertisements.each do |cpd_advertisement| %>
      <tr>
        <td><%= cpd_advertisement.id %></td>
        <td><%= cpd_advertisement.ad_name %></td>
        <td><%= "#{cpd_advertisement.ad_type} (#{cpd_advertisement.kind})" %></td>
        <td><%= cpd_advertisement.contract %></td>
        <td><%= cpd_advertisement.remain %></td>
        <td><%= cpd_advertisement.basic_show_price %></td>
        <td><%= cpd_advertisement.pay_type %> (<%=cpd_advertisement.pay_kind %>)</td>
        <td><%= cpd_advertisement.start_date.to_date %> ~ <%= cpd_advertisement.end_date.to_date %></td>
        <td><%= cpd_advertisement.priority %></td>
        <td><%= @cpd_cor_name.find_by_id(cpd_advertisement.cli_id).cor_name if @cpd_cor_name.find_by_id(cpd_advertisement.cli_id).present? %></td>
        <td><%= link_to 'Edit', edit_admin_cpd_advertisement_path(cpd_advertisement), :class=>"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

