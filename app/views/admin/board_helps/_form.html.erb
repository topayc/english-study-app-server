<%= form_for [:admin, @help] do |f| %>
   <% @help.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
   <% end %>
  <div class="control-group">
    <label class="control-label">title</label>
    <div class="controls">
      <label><%= f.text_field :title %></label>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">content</label>
    <div class="controls">
      <label><%= f.text_area :content , :class => "input-xxlarge", :rows => 20 %></label>
    </div>
  </div>
  <p><%= f.submit %></p>
<% end %>
