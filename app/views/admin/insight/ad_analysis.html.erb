
<button onclick="location.href='/admin/users';" class='btn btn-primary' style='margin-top:15px;'>← HOME</button>
<% count = 0 %>
<h4 style='margin-top:20px;'>광고리스트</h4>
<table class="table table-hover">
  <tr>
    <th style='width:50px;text-align:center;'>No</th>
    <th style='width:100px;text-align:center;'>광고타입</th>
    <th style='text-align:center;'>광고이름</th>
  </tr>
  <% @cpd.each do |a| %>
    <tr class='pointer' data-type='cpd' data-id='<%=a.id%>'>
      <td style='text-align:center;'><%="#{count+=1}"%></td>
      <td><%=a.kind%></td>
      <td><%=a.ad_name%></td>
    </tr>
  <% end %>
  <% @cpdm.each do |a| %>
    <tr class='pointer' data-type='cpdm' data-id='<%=a.id%>'>
      <td style='text-align:center;'><%="#{count+=1}"%></td>
      <td><%=a.kind%></td>
      <td><%=a.ad_name%></td>
    </tr>
  <% end %>
  <% @cpx.each do |a| %>
    <tr class='pointer' data-type='cpx' data-id='<%=a.id%>'>
      <td style='text-align:center;'><%="#{count+=1}"%></td>
      <td><%=a.kind%></td>
      <td><%=a.ad_name%></td>
    </tr>
  <% end %>
</table>

<script>
$(document).ready(function(){
  $("tr.pointer").click(function() {
    location.href='/admin/insight/ad_analysis_detail?type='+$(this).data('type')+'&id='+$(this).data('id');
  });
});
</script>
